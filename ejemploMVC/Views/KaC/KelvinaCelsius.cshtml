@model ejemploMVC.Models.calculo
@{
    ViewBag.Title = "KelvinaCelsius";
}

<h1>Grados Kelvin a Celsius</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <h2>Ingrese los grados Kelvin</h2>
        @Html.LabelFor(Model => Model.num, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.num, new { @class = "form-control", type = "double" })
    </div>


    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
}
<br /> <br />
@if (ViewBag.resultado != null)
{
    <p>Resultado en grados Kelvin:&nbsp;@ViewBag.resultado ºC</p>
}
<br /> <br />
