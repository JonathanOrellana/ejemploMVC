@model ejemploMVC.Models.calculo
@{
         ViewBag.Title = "LibrasaKilos";
}

<h2>Libras a Kilos</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <h2>Ingrese el peso en Libras</h2>
        @Html.LabelFor(Model => Model.numero1, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.numero1, new { @class = "form-control", type = "number" })
    </div>


    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
}
<br /> <br />
@if (ViewBag.resultado != null)
{
    <p>Resultado en Kilos es:&nbsp;@ViewBag.resultado </p>
}
<br /> <br />


