@model ejemploMVC.Models.calculo
@{
    ViewBag.Title = "CelsiusaKelvin";
}

<h1>Grados Celsius a Kelvin</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <h2>Ingrese los grados celsius</h2>
        @Html.LabelFor(Model => Model.numero1, new { @class = "control-label" } )
        @Html.TextBoxFor(Model => Model.numero1, new { @class = "form-control", type = "number" })
    </div>
   

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
}
<br /> <br />
@if (ViewBag.resultado != null)
{
    <p>Resultado en grados Kelvin:&nbsp;@ViewBag.resultado K</p>
}
<br /> <br />

